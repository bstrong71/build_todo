<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
  </head>
  <body>
    <div class="entryform">
      <form class="" action="/" method="post">
        <input type="text" name="task" placeholder="add a task">
        <button type="submit" name="button">Add to List</button>
      </form>
    </div>
    <div class="container">
      <h3>To Do List</h3>
        {{#todos}}
          {{^complete}}
          <p>{{task}}</p>
          <a href="/complete/{{id}}" >Complete</a>
          {{/complete}}
        {{/todos}}
      <h3>Done</h3>
      {{#todos}}
        {{#complete}}
        <p>{{task}}</p>
        {{/complete}}
      {{/todos}}
    </div>
  </body>
</html>
